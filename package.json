{
  "name": "electron-shogi",
  "version": "1.7.0-alpha.1",
  "description": "Shogi Frontend Application",
  "author": "Kubo Ryosuke",
  "license": "MIT",
  "private": true,
  "scripts": {
    "compile": "vue-tsc --noEmit && vite build",
    "serve": "vite",
    "build": "npm run compile -- --outDir docs/webapp && npm run report:license",
    "preview": "vite preview",
    "test:unit": "jest",
    "lint": "eslint --fix -c .eslintrc.js ./src",
    "electron:compile": "tsc && tsc-alias && webpack",
    "electron:serve": "npm run electron:compile && concurrently --kill-others vite \"electron .\" \"tsc --sourceMap -w\" \"tsc-alias -w\"",
    "electron:build": "npm run compile && npm run electron:compile && electron-builder",
    "electron:preview": "npm run compile && npm run electron:compile && electron .",
    "report:license": "node scripts/report-license.mjs"
  },
  "main": "dist/src/background/index.js",
  "dependencies": {
    "@github/hotkey": "^2.0.1",
    "chart.js": "^4.0.1",
    "iconv-lite": "^0.6.3",
    "log4js": "^6.7.0",
    "splitpanes": "^3.1.5",
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@types/splitpanes": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.2.1",
    "@vue/vue3-jest": "^29.2.0",
    "archiver": "^5.3.1",
    "autoprefixer": "^10.4.14",
    "buffer": "^6.0.3",
    "concurrently": "^7.5.0",
    "electron": "^23.1.2",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.26.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.7.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "license-checker": "^25.0.1",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.3",
    "tsc-alias": "^1.7.0",
    "typescript": "^5.0.2",
    "vite": "^4.0.2",
    "vue-tsc": "^1.0.9",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}
